<div id="sign-up-container" class="user-sign-up remove animate__animated animate__faster">

    <div class="welcome-div">
        <img src="<%= assetPath('img/1782188.jpeg') %>" alt="">
        <p>Enter Details to continue <i class="fa-solid fa-arrow-right"></i></p>
    </div>

    
    <form action="/users/create" method="post">
        <div class="input-with-icon">
            <i class="fa-solid fa-user"></i>
            <input id="name-input" type="text" name="name" placeholder="Your name" required>
        </div>
        <div class="input-with-icon">
            <i class="fa-solid fa-envelope"></i>
            <input id="email-input" type="email" name="email" placeholder="Your Email" required>
        </div>

        <div class="input-with-icon">
            <i class="fa-solid fa-key"></i>
            <input id="pass-input" type="password" name="password" placeholder="Password" required>
            <i class="fa-solid fa-eye " id="toggle-password"></i>
        </div>

        <div class="input-with-icon">
            <i class="fa-solid fa-key"></i>
            <input id="pass-input" type="password" name="confirm_password" placeholder="Confirm Password" required>
            <i class="fa-solid fa-eye animate__animated animate__faster" id="toggle-password"></i>
        </div>
        
        <button id="submit-button" type="submit">Sign Up </button>
    </form>

    <p class="option-text">Checkout other options</p>
    
    <div class="auth-options">
        <a id="google-auth" href="/users/auth/google"><img src="<%= assetPath('img/icons8-google-48.png') %>" alt=""></a>
        <a id="fb-auth" href="/users/auth/google"><i class="fa-brands fa-facebook-f"></i></a>
        <a id="git-auth" href="/users/auth/google"><i class="fa-brands fa-github"></i></a>
    </div>

    <p class="option-text">Already have an account ? <a id="toggle-sign-up-page" href="#">Sign In <i class="fa-solid fa-arrow-right"></i></a></p>

</div>



<script src="<%= assetPath('js/sign_in_up.js') %>"></script>
