  </div>

  <form
    action="/posts/create/<%= locals.user._id %>"
    enctype="multipart/form-data"
    id="new-post-form"
    method="post"
  >
    <input
      id="local_user_id"
      type="hidden"
      name="id"
      placeholder="Your id"
      value="<%= locals.user._id %>"
    />

    <input
      type="hidden"
      name="name"
      placeholder="Your name"
      value="<%= locals.user.name %>"
    />
    <input
      type="hidden"
      name="email"
      placeholder="Your email"
      value="<%= locals.user.email %>"
    />
    <input
      required
      type="file"
      name="filepond"
      id="myfile-sm"
      data-max-file-size="200MB"
      class="filepond"
    />
    <textarea
      type="text"
      name="caption"
      id="text-area"
      cols="30"
      rows="3"
      placeholder="Type here..."
      required
    ></textarea>
